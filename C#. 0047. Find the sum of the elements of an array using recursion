Author: #SimpleCode.

Task: Find the sum of the elements of an array using recursion.

Задача: Найти сумму элементов массива с помощью рекурсии.
*/


using System;

public class Program
{
    static void WriteOnTheConsole(int[] myArray, ref int n, ref int sum)
    {
        if (n == myArray.Length) return;
        
        sum += myArray[n];
        Console.WriteLine(sum);
        n++;
        WriteOnTheConsole(myArray, ref n, ref sum);
    }
    
    static void Main()
    {
        int[] myArray = {-5, 0, 5, 10, 20};
        int n = 0;
        int sum = 0;
        
        WriteOnTheConsole(myArray, ref n, ref sum);
    }
}
